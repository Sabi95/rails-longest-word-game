<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <h1>New Game</h1>
  </div>

  <div class="d-flex justify-content-center pt-3">
    <h2>
      <ul class="list-inline">
        <% @letters.each do |letter| %>
          <li class="list-inline-item bg-primary bg-gradient px-4 py-2 rounded shadow text-white"><%= letter%></li>
        <% end %>
      </ul>
    </h2>
  </div>

  <div class="d-flex justify-content-center">
    <p>What is the longest word you can find?</p>
  </div>

  <div class="d-flex justify-content-center pt-3">
    <form action="score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="answer">
      <input class="btn btn-primary" type="submit" value="Submit">
    </form>
  </div>
</div>
